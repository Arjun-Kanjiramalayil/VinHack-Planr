<h2>{{ weekday_name }} Timetable</h2>
<table>
  <thead>
    <tr><th>Time</th><th>Slots</th><th>Edit Slot</th></tr>
  </thead>
  <tbody>
  {% for hour in rooms %}
    <tr>
      <td>{{ ("%d:00"|format(hour)) }}</td>
      <td>
        {% if slots_by_hour[hour] %}
          {% for slot in slots_by_hour[hour] %}
            <div class="slot-content">
                {{ slot.content }} <small>({{ slot.content_type }})</small>
                <form method="post" action="{{ url_for('delete_slot') }}" style="display:inline;" 
                  onsubmit="return confirm('Are you sure you want to remove this slot?');">
                  <input type="hidden" name="slot_id" value="{{ slot.id }}">
                  <button type="submit" class="remove-slot-btn" title="Remove this slot">Remove</button>
                </form>
            </div>
          {% endfor %}
        {% else %}
          <em>Free</em>
        {% endif %}
      </td>
      <td>
        <form method="post" action="{{ url_for('save_slot') }}">
          <input type="hidden" name="slot_id" value="">
          <input type="hidden" name="weekday" value="{{ weekday }}">
          <input type="hidden" name="start_hour" value="{{ hour }}">
          <input type="hidden" name="end_hour" value="{{ hour + 1 }}">
          <input type="text" name="content" placeholder="e.g., Biology Class" required>
          <select name="content_type">
            <option value="class">Class</option>
            <option value="study">Study</option>
            <option value="assignment">Assignment</option>
            <option value="event">Event</option>
            <option value="gym">Gym</option>
            <option value="break">Break</option>
          </select><br>
          <button type="submit">Save</button>
        </form>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>

