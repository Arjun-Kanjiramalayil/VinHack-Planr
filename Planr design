          <button type="submit" class="remove-slot-btn" title="Remove this {{ activity.kind }}">Remove</button>
        </form>
      </li>
    {% endif %}
  {% endfor %}
  {% if not has_reminders %}
    <li>No assignments or events planned</li>
  {% endif %}
</ul>

